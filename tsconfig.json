{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "module": "ES2020",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@components": ["src/components"],
      "@components/*": ["src/components/*"],
      "@screens": ["src/screens"],
      "@screens/*": ["src/screens/*"],
      "@hooks": ["src/hooks/*"],
      "@hooks/*": ["src/hooks/*"]
    }
  }
}
